<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="edu.monash.fit3027.news.DiseasesInfo">

            <TextView
                android:text="Type:"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/uidre"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#101010"
                android:layout_marginTop="121dp"
                android:layout_marginStart="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/Type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_above="@+id/fnText"
        android:layout_alignStart="@+id/uidre"
        android:layout_marginBottom="25dp" />


            <TextView
                android:text="Description:"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/fnText"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#101010"
                android:layout_alignTop="@+id/uidre"
                android:layout_alignStart="@+id/uidre"
                android:layout_marginTop="84dp" />

            <TextView
                android:id="@+id/desid"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_above="@+id/Type"
                android:layout_alignStart="@+id/Type"
                android:layout_marginBottom="13dp" />
            <TextView
                android:text="Causes"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#101010"
                android:id="@+id/lnText"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/fnText" />

            <TextView
                android:id="@+id/causes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_above="@+id/fnText"
                android:layout_alignStart="@+id/uidre"
                android:layout_marginBottom="21dp" />
            <TextView
                android:text="symptoms"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#101010"
                android:id="@+id/gn"
                android:layout_marginLeft="202dp"
                android:layout_above="@+id/symptom"
                android:layout_alignStart="@+id/symptom"
                android:layout_marginBottom="18dp" />

            <TextView
                android:id="@+id/symptom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18dp"
                android:layout_above="@+id/dob"
                android:layout_alignStart="@+id/dob"
                android:layout_marginBottom="18dp" />

            <TextView
                android:text="Prevention"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/dob"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#101010"
                android:layout_marginBottom="25dp"
                android:layout_above="@+id/prevention"
                android:layout_alignStart="@+id/lnText" />

            <TextView
                android:id="@+id/prevention"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18dp"
                android:layout_marginBottom="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/gn" />




    </RelativeLayout>


